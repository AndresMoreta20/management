<div id="app">
    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="button">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="employee in employees" :key="employee.id">
                <td>{{ employee.firstName }}</td>
                <td>{{ employee.lastName }}</td>
                <td>
                    <a :href="'/Employees/Edit/' + employee.id">Edit</a> |
                    <a :href="'/Employees/Details/' + employee.id">Details</a> |
                    <a :href="'/Employees/Delete/' + employee.id">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>

<script>
    new Vue({
        el: "#app",
        data: {
            employees: @Html.Raw(Json.Serialize(Model))
        }
    });
</script>

