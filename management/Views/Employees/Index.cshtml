        border-radius: 5px; 
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

   
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

