@model IEnumerable<management.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container" id="app">
    <p>
        <a asp-action="Create" class="button">Create New</a>
    </p>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="employee in employees" :key="employee.Id">
                <td>{{ employee.FirstName }}</td>
                <td>{{ employee.LastName }}</td>
                <td>
                    <a :href="'/Edit/' + employee.Id" class="action-link">Edit</a>
                    <a :href="'/Details/' + employee.Id" class="action-link">Details</a>
                    <a :href="'/Delete/' + employee.Id" class="action-link">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>

  
</div>

<script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
<script>
    new Vue({
        el: '#app',
        data: {
            employees: @Html.Raw(Json.Serialize(Model))
            }
    });
</script>

